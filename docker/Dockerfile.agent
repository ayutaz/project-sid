# PIANO Agent Dockerfile
FROM python:3.12-slim

WORKDIR /app

# Install uv package manager (using pip for simplicity; alternatives: curl installer or copy from ghcr.io/astral-sh/uv)
RUN pip install --no-cache-dir uv

# Copy project files
COPY pyproject.toml uv.lock ./
COPY src/ src/

# Create non-root user and set ownership
RUN useradd --create-home appuser && \
    chown -R appuser:appuser /app

# Install dependencies as appuser
USER appuser
RUN uv sync --no-dev --frozen

# Default command
ENTRYPOINT ["uv", "run", "piano"]
CMD ["--agents", "1", "--ticks", "100", "--mock-llm"]
