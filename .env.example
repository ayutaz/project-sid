# PIANO Environment Configuration
# Copy this file to .env and update values as needed.
# All variables use the PIANO_ prefix. Nested settings use __ as delimiter.

# --- Redis ---
PIANO_REDIS__HOST=localhost
PIANO_REDIS__PORT=6379
PIANO_REDIS__DB=0
# PIANO_REDIS__PASSWORD=

# --- LLM ---
PIANO_LLM__DEFAULT_MODEL=gpt-4o-mini
PIANO_LLM__TEMPERATURE=0.0
PIANO_LLM__MAX_TOKENS=1024
PIANO_LLM__API_KEY=your-api-key-here

# --- ZMQ Bridge ---
PIANO_BRIDGE__HOST=localhost
PIANO_BRIDGE__COMMAND_PORT=5555
PIANO_BRIDGE__EVENT_PORT=5556

# --- Minecraft ---
PIANO_MINECRAFT__HOST=localhost
PIANO_MINECRAFT__PORT=25565

# --- Agent ---
PIANO_AGENT__AGENT_ID=agent-001
PIANO_AGENT__TICK_INTERVAL_MS=500
PIANO_AGENT__CC_INTERVAL_MS=3000

# --- Scheduler ---
PIANO_SCHEDULER__FAST_TICK_MS=500
PIANO_SCHEDULER__MID_TICK_MULTIPLIER=3
PIANO_SCHEDULER__SLOW_TICK_MULTIPLIER=10

# --- Logging ---
PIANO_LOG__LEVEL=INFO
PIANO_LOG__FORMAT=json
